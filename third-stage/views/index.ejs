    <script>
//点击10个小图标，跳转到对应的界面 
        var indexlist=document.getElementsByClassName('index-desc-list')
        for(var i=0;i<indexlist.length;i++){
            indexlist[i].onclick=function(){
                location.href=`/index/${this.id}`
            }
        }


// 10点上新跳连接
         var opengo=document.querySelectorAll('.opengo')
         for(var i=0;i<3;i++){
            opengo[i].onclick=function(){
                location.href='/index/womenclothes'
            }
         }
         for(var i=4;i<5;i++){
            opengo[i].onclick=function(){
                location.href='/index/skincare'
            }
         }
         for(var i=5;i<6;i++){
            opengo[i].onclick=function(){
                location.href='/index/manclothes'
            }
         }
         for(var i=6;i<7;i++){
            opengo[i].onclick=function(){
                location.href='/index/clock'
            }
         }
         for(var i=7;i<opengo.length;i++){
            opengo[i].onclick=function(){
                location.href='/index/womenclothes'
            }
         }


//  唯品快抢跳转到国际品牌
         var fastbuygo=document.querySelectorAll('.fastbuygo')
         for(var i=0;i<fastbuygo.length;i++){
             fastbuygo[i].onclick=function(){
                //  alert(1)
                location.href='/index/international'
             }
         }


//  最后疯抢跳转到详情界面
         var lastcrazygo=document.querySelectorAll('.lastcrazygo')
         for(var i=0;i<lastcrazygo.length;i++){
             lastcrazygo[i].onclick=function(){
