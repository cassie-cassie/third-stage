        </div>
        <!-- end -->
        <div class="pp-pro">
        <% for(var i=0;i<data.length;i++){%>
            <h3><%= data[i].leixing%>
                <a>更多 <span class="fa fa-angle-right"></span></a>
            </h3>
            <div class="pp-img">
                <% for(var j=0;j<data[i].list.length;j++){%>
                <img src=<%= data[i].list[j].src%> alt="">
                <%}%>
            </div>
        <%}%>
        </div>
    </div>
    <!-- 回到顶部 -->
    <div id="back"><i class="fa fa-angle-up" style="font-size:27px;color:#fff;"></i></div>


    <script src="js/iscroll.js"></script>
    <script src="js/swiper.js"></script>
    <script type="text/javascript">
        // 导航栏
        var myScroll = new IScroll('.scrollBar',{
            // mouseWheel:true,
            // scrollbars:true,
            scrollX:true
        });
        //导航栏不动，li移动
        var contentl= new IScroll('.contentl',{
            scrollX:true
        });
        var contentr = new IScroll('.contentr',{
            scrollX:true
        });


        // 左边箭头右边房子回当前页
        var backindex=document.querySelectorAll('.backindex')
        for(var i=0;i<backindex.length;i++){
            backindex[i].onclick=function(){
                location.href='/shop/index'
            }
        }

        // 切换
        var fenlei = document.querySelector('.tc1')
        var pinpai = document.querySelector('.tc2')
        var pinpaiview = document.querySelector('.pinpai')
        var fenleiview = document.querySelector('.content')
        fenlei.onclick = function(){
            fenleiview.style.display = 'block'
            pinpaiview.style.display = 'none'
            fenlei.style.background = '#585c64'
            fenlei.style.color = 'white'
            pinpai.style.background = 'none'
            pinpai.style.color = '#585c64'
        }
        pinpai.onclick = function(){
            pinpaiview.style.display = 'block'
            fenleiview.style.display = 'none'
            fenlei.style.background = 'none'
            fenlei.style.color = '#585c64'
            pinpai.style.background = '#585c64'
            pinpai.style.color = 'white'
        }

         //  一键回顶部
        var back=document.querySelector('#back')
        window.onscroll=function(){
            if(window.scrollY>500){
                back.style.display='block'
            }else{
                back.style.display='none'
            }
        }
        back.onclick=function(e){
            window.scrollTo(0,0)
        }


        // li女装等切换
        var leftlist  = document.querySelectorAll('.leftlist')
        var rightlist = document.querySelectorAll('.rightlist')
        console.log(rightlist)
        for(var i=0;i<leftlist.length;i++){
            leftlist[i].index = i
            leftlist[i].onclick=function(){
                for(var j=0;j<rightlist.length;j++){
                    rightlist[j].style.display='none'
                }
                // 未点击时的效果
                for(var h=0;h<leftlist.length;h++){
                    leftlist[h].style.background='none'
                    leftlist[h].style.color='#585c64'
                    leftlist[h].style.border='none'
                }
                // 点击后的效果
                rightlist[this.index].style.display='block'
                leftlist[this.index].style.background='#fff'
                leftlist[this.index].style.color='#222'
                leftlist[this.index].style.borderLeft='0.3rem solid #de3d96'
            }
        }
    </script>
    
